@{
  Layout = "_Layout";
}
@using MusicOrganizer.Models

<h1>Music Organizer</h1>

@if (@Model.Count == 0)
{
  <p>There are no records in the collection.</p>
}

@{foreach (Record record in Record.GetAll())
{
  <h4><a href="/records/@record.Id">@record.Name</a></h4>
}}

<form action="/records/delete" method="post">
  <button type="submit" name="button">Clear All Record?</button>
</form>
<div class="footer">
  <a href="/">Return To Home</a>
</div>